{% extends "AdminBundle::layout.html.twig" %}

{% block body %}
    <a href="{{ path("admin.user_add") }}">Add user</a>
    <table border="1" >
        <tr>
            <th>Login</th>
            <th>E-mail</th>
            <th></th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path("admin.user_edit", {id: user.getId()}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}