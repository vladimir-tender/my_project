{% extends "MyShopBundle::layout.html.twig" %}

{% block body %}
    <div class="main">
        <div class="content">
            <div class="login_panel">
                <h3>Existing Customers</h3>
                <p>Sign in with the form below.</p>
                <form action="hello" method="get" id="member">
                    <input name="Domain" type="text" value="Email" class="field" onfocus="this.value = '';"
                           onblur="if (this.value == '') {this.value = 'Username';}">
                    <input name="Domain" type="password" value="Password" class="field" onfocus="this.value = '';"
                           onblur="if (this.value == '') {this.value = 'Password';}">
                </form>
                <p class="note">If you forgot your passoword just enter your email and click <a href="#">here</a></p>
                <div class="buttons">
                    <div class="sign-in">
                        <button class="grey">Sign In</button>
                    </div>
                </div>
            </div>
            <div class="register_account">
                <h3>Register New Account</h3>
                <form method="post" action="{{ path("my_shop.login", {reg: true}) }}">

                    <table>
                        <tbody>
                        <tr>
                            <td>
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}

                                {{ form_widget(form.city) }}
                                {{ form_errors(form.city) }}

                                {{ form_widget(form.address) }}
                                {{ form_errors(form.address) }}

                                {{ form_widget(form.phone) }}
                                {{ form_errors(form.phone) }}
                            </td>
                            <td>
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}

                                {{ form_widget(form.password) }}

                                {{ form_row(form._token) }}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="search">
                        <div>
                            <button class="grey">Create Account</button>
                        </div>
                    </div>

                    <p class="terms">By clicking 'Create Account' you agree to the <a href="#">Terms &amp;
                            Conditions</a>.</p>
                    <div class="clear"></div>

                </form>
            </div>
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}